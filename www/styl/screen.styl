@import colors
@import prefixes
@import extraIg
.ig
    @import basics
.ig
    svg
        position relative
        z-index 2
        path
            stroke white
            stroke-opacity 0.3
            stroke-width 2px
        g.sport:hover
        g.event:hover
            opacity 0.8
        g.sport:hover
            cursor pointer
        .axis
            .tick
                line
                    stroke #888
                    shape-rendering crispEdges
                text
                    fill #888
                    font-size 0.7em
                text.name
                    font-size 0.8em
                    text-anchor middle
                    display none
            .tick:hover
            .tick.active
                cursor default
                text.name
                    display block
                text
                    fill #222


    .backButton
        @import backButton
    .backButton
        z-index 4
    .stories
        z-index 3
        opacity 1
        transition opacity 0.8s
    div.stories
        position absolute
        top 42px
        left 0px
        width 690px
        margin-left 24px
        line-height 1.4em
        .nextButton
            z-index 2
            position absolute
            top 0px
            left 400px
            height 130px
            width 85px
            opacity 0.5
            transition opacity 0.1s
            div
                position absolute
                top 47px
                left 20px
                &:nth-child(1)
                    margin-left 20px
                    border-top 20px solid transparent
                    border-bottom 20px solid transparent
                    border-left 20px solid #aaa
                &:nth-child(2)
                    margin-left 10px
                    width 10px
                    height 40px
                    background #aaa
                &:nth-child(3)
                    margin-left 10px
                    border-top 20px solid transparent
                    border-bottom 20px solid transparent
                    border-left 20px solid white
            &:hover
                cursor pointer
                opacity 1

        .story
            z-index 1
            position absolute
            top 0px
            left 0px
            opacity 1
            transition left 0.8s, opacity 0.8s
            &.left
            &.right
                opacity 0
            &.left
                left 700px
            &.right
                left -700px
            h2
                margin-top 0px
            p
                width 390px
            figure
                margin 0px
                img
                    max-width 390px
                    max-height 270px
                    margin 0px 0px 5px 0px !important
                    width auto
                    height auto
                figcaption
                    margin-top 2px
                    line-height 1.5em
                    max-width 390px
                    color #444
                    font-size 0.8em
    ul.stories
        position absolute
        left 25px
        top 1px
        list-style-type none
        margin 0px
        padding 0px
        li
            position relative
            z-index 1
            padding 0px
            margin 0px
            float left
            display block
            background #fafafa
            outline 1px solid #e2e2e2
            font-size 0.8em
            padding 2px 0px
            width 38px
            text-align center

            &:hover
                z-index 3
                cursor pointer
                background lighten(HNOrange, 78%)
                outline-color lighten(HNOrange, 45%)
            &.active
                font-weight bold
            &:active
            &.active
                z-index 2
                background lighten(HNOrange, 85%)
                outline-color lighten(HNOrange, 55%)
    h1
        position absolute
        margin 0px
        top 11px
        font-size 1.7em
        left -500px
        transition left 0.8s
    &.detail
        h1
            left 60px
        .stories
            z-index 1
            opacity 0

