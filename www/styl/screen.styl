@import colors
@import prefixes
@import extraIg
.ig
    @import basics
.ig
    svg
        position relative
        z-index 2
        path
            stroke white
            stroke-opacity 0.3
            stroke-width 2px
        g.sport:hover
        g.event:hover
            opacity 0.8
        .axis
            .tick
                line
                    stroke #888
                    shape-rendering crispEdges
                text
                    fill #888
                    font-size 0.7em
                text.name
                    text-anchor middle
                    display none
            .tick:hover
                cursor default
                text.name
                    display block


    .backButton
        @import backButton
    .backButton
        z-index 4
    .stories
        z-index 3
        opacity 1
        transition opacity 0.8s
    div.stories
        position absolute
        top 42px
        left 0px
        width 690px
        margin-left 24px
        line-height 1.4em
        h2
            margin-top 0px
        p
            width 390px
        .attachment
            position absolute
            top 0px
            right 0px
            img
                float right
                max-width 270px
                height auto
    ul.stories
        position absolute
        left 25px
        top 0px
        list-style-type none
        margin 0px
        padding 0px
        li
            padding 0px
            margin 0px
            float left
            display block
            background #f6f6f6
            border 1px solid #ccc
            border-left 0px none
            font-size 0.8em
            padding 2px 8px
            &:first-child
                border-left 1px solid #ccc
            &:hover
                cursor pointer
                background lighten(HNBlue, 20%)
                border-right-color HNBlue
            &:active
            &.active
                background lighten(HNBlue, 50%)
                font-weight bold
                border-color darken(HNBlue, 10%)
    &.detail
        .stories
            z-index 1
            opacity 0
            // display none



